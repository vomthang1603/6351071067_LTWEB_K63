@model IPagedList<QLBANSACH.Models.SACH>
@using PagedList.Mvc
@using PagedList

@{
    ViewBag.Title = "Sach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý thông tin sách</h2>

<p>
    @Html.ActionLink("Create New", "ThemmoiSach")
</p>

<table class="table" border="1">
    <tr>
    <tr>
        <th>Tên sách</th>
        <th>Giá bán</th>
        <th>Mô tả</th>
        <th>Ảnh bìa</th>
        <th>Ngày cập nhật</th>
        <th>Số lượng tồn</th>
        <th>Chủ đề</th>
        <th>Nhà xuất bản</th>
        <th>Hành động</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Tensach)</td>
            <td>@Html.DisplayFor(modelItem => item.Giaban)</td>
            <td>@Html.DisplayFor(modelItem => item.Mota)</td>
            <td>
                <img src="~/Content/Images/Hinhsanpham/@item.Anhbia" alt="@item.Tensach" style="width:180px; height:140px;" />
            </td>
            <td>@Html.DisplayFor(modelItem => item.Ngaycapnhat)</td>
            <td>@Html.DisplayFor(modelItem => item.Soluongton)</td>
            <td>@Html.DisplayFor(modelItem => item.CHUDE.TenChuDe)</td>
            <td>@Html.DisplayFor(modelItem => item.NHAXUATBAN.TenNXB)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Masach }) |
                @Html.ActionLink("Details", "Detail", new { id = item.Masach }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Masach })
            </td>
        </tr>
    }
</table>

<div class="pagination justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("Sach", new { page }))
</div>

<style>
    /* Kiểu dáng cho các nút phân trang */
    .pagination {
        display: flex;
        justify-content: center;
        padding: 20px 0;
    }

        .pagination a,
        .pagination span {
            display: inline-block;
            padding: 10px 15px;
            margin: 0 5px;
            border: 1px solid #ddd;
            border-radius: 5px;
            text-decoration: none;
            color: #007bff;
            font-size: 14px;
            background-color: #f8f9fa;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            /* Khi người dùng hover vào nút phân trang */
            .pagination a:hover,
            .pagination span:hover {
                background-color: #007bff;
                color: white;
            }

        /* Đánh dấu trang hiện tại */
        .pagination .active {
            background-color: #007bff;
            color: red;
            border-color: #007bff;
        }

        /* Thêm kiểu cho các nút next và previous */
        .pagination .next,
        .pagination .prev {
            font-weight: bold;
        }
</style>